<Page x:Class="PDVprova.Views.PontoDeVenda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDVprova.Views"
      mc:Ignorable="d"
      Title="PontoDeVenda" Height="511" Width="819">

    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="684,480,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ListView x:Name="ListaProdutos" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="296,96,36,55">
            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="60" Header="Coluna 1" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="345" Header="Coluna 2" DisplayMemberBinding="{Binding Age}"/>
                    <GridViewColumn Width="80" Header="Coluna 3" DisplayMemberBinding="{Binding Mail}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
